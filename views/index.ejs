<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title><%= title %></title>
  </head>
  <body>
    <h1><%= title %></h1>
      <% messages.forEach((message, index) => { %>
        <div>
          <p><strong><%= message.user %>:</strong> <%= message.text %></p>
          <p><em>(<%= message.added.toLocaleString() %>)</em></p>
          <a href="/messages/<%= index %>">Open</a>
        </div>
      <% }) %>
    <a href="/new">Add a new message</a>
  </body>
</html>
